<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="MemberMapper">

    <select id="getLectureList" parameterType="String" resultType="String">
        SELECT lecture FROM lecture
    </select>

    <select id="getProList" parameterType="String" resultType="String">
        SELECT DISTINCT professor FROM lecture
    </select>

    <select id="getgradeproList" parameterType="String" resultType="dto.GradeProVO">
        select a.lecture, professor, studentname, lectime, credit from lecture a, grade b        
        <where>
        a.lecture = b.lecture
         and a.lecture = '#{lecture}'
        </where>          
    </select>

    <select id="getMyGrade" parameterType="dto.GradeCheckVO" resultType="dto.LectureVO">
        SELECT a.lecture, a.professor, a.lectime, b.credit
        FROM lecture a, grade b
        <where>
            a.lecture = b.lecture
            AND a.lecture = #{lecture}
            AND b.studentname = #{studentname}
        </where>
    </select>



    <insert id="myLectureGrade" parameterType="dto.LectureVO">
        insert into grade values (#{lecture}, #{studentname}, #{credit})            
    </insert>




</mapper>